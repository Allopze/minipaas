# ============================================
# MiniChunk - Environment Variables
# ============================================
# Copy this file to .env and update the values

# ===========================================
# SERVER CONFIGURATION
# ===========================================
PORT=3001
NODE_ENV=production

# ===========================================
# SECURITY (REQUIRED)
# ===========================================
# JWT Secret - REQUIRED, minimum 32 characters
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=your-secure-secret-key-at-least-32-characters

# JWT Token expiration (default: 24h)
JWT_EXPIRES_IN=24h

# ===========================================
# CORS CONFIGURATION
# ===========================================
# Comma-separated list of allowed origins
# Example: https://minichunk.yourdomain.com,https://admin.yourdomain.com
ALLOWED_ORIGINS=http://localhost:6200,http://localhost:5173

# ===========================================
# DATABASE
# ===========================================
# Path to SQLite database file (relative to backend directory)
DB_PATH=./data/minichunk.db

# ===========================================
# FILE PATHS
# ===========================================
# Base path for Minecraft server files
SERVERS_BASE_PATH=./data/servers

# Path for backup files
BACKUPS_PATH=./data/backups

# ===========================================
# LOGGING
# ===========================================
# Log level: fatal, error, warn, info, debug, trace
LOG_LEVEL=info

# ===========================================
# OPTIONAL: INITIAL ADMIN PASSWORD
# ===========================================
# If not set, a random password will be generated on first run
# DEFAULT_ADMIN_PASSWORD=your-secure-admin-password
